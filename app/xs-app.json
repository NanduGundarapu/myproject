{
    "welcomeFile": "index.html",
    "authenticationMethod": "route",
    "logout": {
        "logoutPage": "/logout.html",
        "logoutEndpoint": "/my/logout"
    },
    "websockets": {
        "enabled": true
    },
    "routes": [
        {
            "source": "/status",
            "destination": "srv-api",
            "csrfProtection": true,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/api/(.*)",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "POST": [
                    "$XSAPPNAME.Create"
                ],
                "PUT": [
                    "$XSAPPNAME.Create"
                ],
                "DELETE": [
                    "$XSAPPNAME.Delete"
                ],
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/employee/(.*)",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "POST": [
                    "$XSAPPNAME.Create"
                ],
                "PUT": [
                    "$XSAPPNAME.Create"
                ],
                "DELETE": [
                    "$XSAPPNAME.Delete"
                ],
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/rest(.*)",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "POST": [
                    "$XSAPPNAME.Create"
                ],
                "PUT": [
                    "$XSAPPNAME.Create"
                ],
                "DELETE": [
                    "$XSAPPNAME.Delete"
                ],
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/sap/bc/lrep(.*)",
            "destination": "srv-api",
            "csrfProtection": true,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "POST": [
                    "$XSAPPNAME.Display"
                ],
                "PUT": [
                    "$XSAPPNAME.Display"
                ],
                "DELETE": [
                    "$XSAPPNAME.Display"
                ],
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "^/logout.html$",
            "localDir": "./",
            "authenticationType": "none"
        },
        {
            "source": "/live",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/ready",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/health",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "default": "$XSAPPNAME.Display"
            }
        },
        {
            "source": "/(.*)",
            "localDir": "./",
            "authenticationType": "xsuaa",
            "scope": {
                "GET": "$XSAPPNAME.Display",
                "default": "$XSAPPNAME.Display"
            }
        }
    ]
}